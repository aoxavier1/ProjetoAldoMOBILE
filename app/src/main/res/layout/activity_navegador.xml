<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Navegador">

    <EditText
        android:id="@+id/colocarURL"
        android:layout_width="311dp"
        android:layout_height="61dp"
        android:ems="10"
        android:hint="Coloque uma URL"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/botaoDeEntrada"
        android:layout_width="87dp"
        android:layout_height="65dp"
        android:text="IR"
        app:layout_constraintTop_toBottomOf="@+id/colocarURL"
        tools:layout_editor_absoluteX="308dp" />

    <WebView
        android:id="@+id/navedadorDaWeb"
        android:layout_width="395dp"
        android:layout_height="581dp"
        app:layout_constraintTop_toBottomOf="@+id/botaoDeEntrada"
        tools:layout_editor_absoluteX="7dp" />
</androidx.constraintlayout.widget.ConstraintLayout>